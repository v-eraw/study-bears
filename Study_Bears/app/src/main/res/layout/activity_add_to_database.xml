<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView"
        android:textStyle="bold" />


    <TextView
        android:text="Name: "
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="74dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="83dp"
        android:gravity="bottom"
        android:id="@+id/textName"
        android:textStyle="bold" />

    <TextView
        android:text="Email: "
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textName"
        android:layout_alignEnd="@+id/textName"
        android:layout_alignRight="@+id/textName"
        android:gravity="bottom"
        android:id="@+id/textEmail"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/textEmail"
        android:gravity="bottom"
        android:textAlignment="center"
        android:layout_below="@+id/textName"
        />

    <TextView
        android:text="School:"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textEmail"
        android:layout_alignEnd="@+id/textEmail"
        android:layout_alignRight="@+id/textEmail"
        android:gravity="bottom"
        android:id="@+id/textSchool"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etSchool"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/textSchool"
        android:gravity="bottom"
        android:textAlignment="center"
        android:layout_below="@+id/textEmail"
        />

    <EditText
        android:id="@+id/etName"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="bottom"
        android:textAlignment="center"
        android:layout_marginTop="83dp"
        android:layout_toRightOf="@+id/textName"/>

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textSchool"
        android:layout_alignEnd="@+id/textSchool"
        android:layout_alignRight="@+id/textSchool"
        android:gravity="bottom"
        android:id="@+id/textPassword"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/textPassword"
        android:gravity="bottom"
        android:textAlignment="center"
        android:layout_below="@+id/textSchool"
        />


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/textPassword"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />


</RelativeLayout>